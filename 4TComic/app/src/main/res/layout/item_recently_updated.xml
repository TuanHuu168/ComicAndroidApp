<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardBackgroundColor="@color/white">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgRecentlyUpdated"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/RoundLog"
            app:srcCompat="@drawable/truyen2" />

        <TextView
            android:id="@+id/lblRecentlyUpdated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/faustina"
            android:gravity="center"
            android:text="manga name"
            android:textColor="#000"
            android:text="manga name"
            android:textSize="14sp" />
        <ImageButton
            android:id="@+id/btnDeleteComic"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/btn_delete_comic"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
