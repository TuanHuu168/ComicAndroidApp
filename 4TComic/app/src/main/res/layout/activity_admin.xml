<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.admin.AdminActivity">

    <!-- topNav -->
    <LinearLayout
        android:id="@+id/topNav"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/top_navigation_bar"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:background="@color/pink"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_back"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/lblAdminPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="45dp"
            android:layout_weight="1"
            android:fontFamily="@font/faustina_bold"
            android:gravity="center"
            android:text="@string/admin_text"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Nội dung cuộn -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topNav"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Danh sách tài khoản -->
            <LinearLayout
                android:id="@+id/AccountList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/lblAccountTitle"
                    android:layout_width="260dp"
                    android:layout_height="45dp"
                    android:background="@drawable/title_holder"
                    android:fontFamily="@font/faustina_bold"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:text="@string/account_list_text"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="180dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/item_holder"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:scrollbars="none"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                </LinearLayout>
            </LinearLayout>

            <!-- Truyện mới đăng -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/lblRecentlyUpdatedTitle"
                    android:layout_width="260dp"
                    android:layout_height="45dp"
                    android:background="@drawable/title_holder"
                    android:fontFamily="@font/faustina_bold"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:text="@string/recently_updated"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="180dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/item_holder"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewRecentlyUpdated"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:scrollbars="none"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                </LinearLayout>

                <TextView
                    android:id="@+id/lblRecentlyComment"
                    android:layout_width="260dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/title_holder"
                    android:fontFamily="@font/faustina_bold"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:text="@string/recently_comment"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <ListView
                    android:id="@+id/list_view_comment"
                    android:layout_width="match_parent"
                    android:layout_height="449dp"
                    android:layout_marginTop="10dp"
                    android:scrollbars="none"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="0dp"
                    tools:listitem="@layout/item_comment" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
