<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_filter_newest"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="20dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_newest"
            android:fontFamily="@font/faustina"
            android:padding="0dp"
            android:text="@string/filterNewest"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            />

        <Button
            android:id="@+id/btn_filter_oldest"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_oldest"
            android:fontFamily="@font/faustina"
            android:padding="0dp"
            android:text="@string/filterOldest"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_chapters"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        tools:ignore="MissingConstraints" />

</LinearLayout>
