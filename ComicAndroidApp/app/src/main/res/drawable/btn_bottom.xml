<!-- res/drawable/rounded_corners.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/white"/> <!-- Màu nền của view -->
            <corners android:radius="20dp" /> <!-- Bán kính bo góc -->
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/white_pressed"/> <!-- Màu nền của view -->
            <corners android:radius="20dp" /> <!-- Bán kính bo góc -->
        </shape>
    </item>
</selector>